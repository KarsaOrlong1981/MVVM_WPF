<Window x:Class="MVVM_WPF.View.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_WPF.View" xmlns:local1="clr-namespace:MVVM_WPF.ViewModel"
        mc:Ignorable="d"
        Title="MainPage" Height="450" Width="800" WindowStartupLocation="CenterScreen" >
    <Window.DataContext>
        <local1:UserViewModel/>
    </Window.DataContext>
    <Grid Margin="0,0,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView Name="UserGrid" Grid.Row="1" Margin="4,178,12,13"  ItemsSource="{Binding Users}"  >
            <ListView.View>
                <GridView x:Name="grdTest" AllowsColumnReorder="True" >
                    <GridViewColumn DisplayMemberBinding="{Binding UserId}"  Width="50">
                        <GridViewColumnHeader>UserId
                            <GridViewColumnHeader.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Ascending" Command="{Binding AscendingUserIdClicked}" IsChecked="{Binding AscUserIdIsChecked}"/>
                                    <MenuItem Header="Descending" Command="{Binding DescendingUserIdClicked}" IsChecked="{Binding DescUserIdIsChecked}"/>
                                </ContextMenu>
                            </GridViewColumnHeader.ContextMenu>
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn  DisplayMemberBinding="{Binding FirstName}"  Width="80" >
                        <GridViewColumnHeader>First Name
                            <GridViewColumnHeader.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Ascending" Command="{Binding AscendingFirstNameClicked}" IsChecked="{Binding AscFirstNameIsChecked}"/>
                                    <MenuItem Header="Descending" Command="{Binding DescendingFirstNameClicked}" IsChecked="{Binding DescFirstNameIsChecked}"/>
                                </ContextMenu>
                            </GridViewColumnHeader.ContextMenu>
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn  DisplayMemberBinding="{Binding LastName}" Width="100" >
                        <GridViewColumnHeader>Last Name
                            <GridViewColumnHeader.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Ascending" Command="{Binding AscendingLastNameClicked}" IsChecked="{Binding AscLastNameIsChecked}"/>
                                    <MenuItem Header="Descending" Command="{Binding DescendingLastNameClicked}" IsChecked="{Binding DescLastNameIsChecked}"/>
                                </ContextMenu>
                            </GridViewColumnHeader.ContextMenu>
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn Header="City" DisplayMemberBinding="{Binding City}" Width="80" >
                        
                    </GridViewColumn>
                    <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}" Width="80" >
                        
                    </GridViewColumn>
                    <GridViewColumn Header="Country" DisplayMemberBinding="{Binding Country}" Width="100" >
                        
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,7,0,0" Name="txtUserId" VerticalAlignment="Top" Width="178" Text="{Binding ElementName=UserGrid,Path=SelectedItem.UserId}" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,35,0,0" Name="txtFirstName" VerticalAlignment="Top" Width="178" Text="{Binding ElementName=UserGrid,Path=SelectedItem.FirstName}" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,62,0,0" Name="txtLastName" VerticalAlignment="Top" Width="178" Text="{Binding ElementName=UserGrid,Path=SelectedItem.LastName}" />
        <Label Content="UserId" Grid.Row="1" HorizontalAlignment="Left" Margin="12,12,0,274" Name="label1" />
        <Label Content="Last Name" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,60,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Content="First Name" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,35,0,0" Name="label3" VerticalAlignment="Top" />
        <Button Content="Update" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="310,40,0,0" Name="btnUpdate"   
                VerticalAlignment="Top" Width="141"  
                Command="{Binding Path=UpdateCommad}"  />
        <Button Content="Add new User" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="310,80,0,0" Name="btnAdd"   
                VerticalAlignment="Top" Width="141"  
                Command="{Binding AddNewUserCommand}" Visibility="{Binding IsVisibleNewUserBTN}" />
        <Button Content="Add" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="310,120,0,0"  
                VerticalAlignment="Top" Width="141"  
                Command="{Binding AddCommand}" Visibility="{Binding IsVisible}" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,143,0,0" x:Name="txtCity" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.City , ElementName=UserGrid}" />
        <Label Content="Country" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,141,0,0" x:Name="label2_Copy" VerticalAlignment="Top" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,88,0,0" x:Name="txtCountry" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.Country, ElementName=UserGrid}" />
        <Label Content="City" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,86,0,0" x:Name="label2_Copy1" VerticalAlignment="Top" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="80,115,0,0" x:Name="txtSTate" VerticalAlignment="Top" Width="178" Text="{Binding SelectedItem.State, ElementName=UserGrid}" />
        <Label Content="State" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="12,113,0,0" x:Name="label2_Copy2" VerticalAlignment="Top" />
        
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="580,7,0,0"  VerticalAlignment="Top" Width="178" Text="{Binding UserIdAdd}" Visibility ="{Binding IsVisible}"/>
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="580,35,0,0"  VerticalAlignment="Top" Width="178" Text="{Binding FirstNameAdd}" Visibility ="{Binding IsVisible}" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="580,62,0,0"  VerticalAlignment="Top" Width="178" Text="{Binding LastNameAdd}" Visibility ="{Binding IsVisible}" />
        <Label Content="UserId" Grid.Row="1" HorizontalAlignment="Left" Margin="510,12,0,274" Visibility ="{Binding IsVisible}" />
        <Label Content="Last Name" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="510,60,0,0"  VerticalAlignment="Top" Visibility ="{Binding IsVisible}" />
        <Label Content="First Name" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="510,35,0,0"  VerticalAlignment="Top" Visibility ="{Binding IsVisible}"/>
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="580,143,0,0"  VerticalAlignment="Top" Width="178" Text="{Binding CityAdd}" Visibility ="{Binding IsVisible}" />
        <Label Content="Country" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="510,141,0,0"  VerticalAlignment="Top" Visibility ="{Binding IsVisible}" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="580,88,0,0" VerticalAlignment="Top" Width="178" Text="{Binding CountryAdd}" Visibility ="{Binding IsVisible}"/>
        <Label Content="City" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="510,86,0,0"  VerticalAlignment="Top" Visibility ="{Binding IsVisible}"/>
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="580,115,0,0"  VerticalAlignment="Top" Width="178" Text="{Binding StateAdd}" Visibility ="{Binding IsVisible}"/>
        <Label Content="State" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="510,113,0,0" VerticalAlignment="Top" Visibility ="{Binding IsVisible}" />
    </Grid>
</Window>
